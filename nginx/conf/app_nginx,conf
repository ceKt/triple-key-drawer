upstream django {
        server uwsgi:8081;
}       

server {
        listen 80;
        server_name localhost;
        charset utf-8;

        # Static file
        location /static {
                alias /static;
        }

        # Non media 
        location / {
                uwsgi_pass django;
                include /etc/nginx/uwsgi_params;
        }
}
# レスポンスヘッダにバージョン番号を出さないための設定（セキュリティのため）
server_tokens off;